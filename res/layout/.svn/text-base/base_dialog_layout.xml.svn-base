<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/base_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22000000"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/base_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/text_color"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp" >
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#22000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/base_dialog_btn_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/v1_base_btn_black__selector"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Cancal"
            android:textColor="@color/text_color"
            android:textSize="15dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/base_dialog_btn_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/v1_base_btn_black__selector"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="OK"
            android:textColor="@color/text_color"
            android:textSize="15dp"
            android:visibility="gone"
             />
    </LinearLayout>

</LinearLayout>