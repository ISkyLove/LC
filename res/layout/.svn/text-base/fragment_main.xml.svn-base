<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lai8"
    android:orientation="vertical"
    tools:context="com.lc.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/lai5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="To Elem"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/main_btn_log"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_action_about" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/v1_base_btn_black__unpress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:visibility="gone" />

    <EditText
        android:id="@+id/main_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入发送数据"
        android:visibility="gone" />

    <Button
        android:id="@+id/main_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/v1_base_btn_black__unpress"
        android:enabled="false"
        android:text="自动连接"
        android:textColor="@color/text_color"
        android:textSize="15dp" />

    <Button
        android:id="@+id/main_hand_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/v1_base_btn_black__selector"
        android:text="手动连接"
        android:textColor="@color/text_color"
        android:textSize="15dp" />

    <SeekBar
        android:id="@+id/main_seekbar_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:max="255"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:paddingLeft="15dp"
        android:progressDrawable="@drawable/v1_seek_bar_light_bk" />

    <SeekBar
        android:id="@+id/main_seekbar_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:max="255"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:paddingLeft="15dp"
        android:progressDrawable="@drawable/v1_seek_bar_light_bk"
        android:thumb="@drawable/seekbar_thumb"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.lc.view.ColorView
            android:id="@+id/color_pick"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/main_receive"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scrollbars="vertical"
            android:textColor="#00ff00"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>